pipeline {
	agent any
	stages {
		stage("Build") {
			step {
				echo " Start build the app "
				bat "mvn clean package"
			}
			post{
				success{
					echo " build success , now archiving the artifact "
					archiveArtifacts artifacts : "**/webApp.war"
				}
			}
		}
		stage("Deploy in staging env"){
			step{
				build job : "deploy app in staging env"
			}
		}
	}
}